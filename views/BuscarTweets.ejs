<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Bootstrap Admin Theme</title>

    <% include importCss %>

</head>

<body>

    <div id="wrapper">

        <% include dashNavs %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Tweets</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                  <form method="POST" action="/GetTweets2">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Palabra</label>
                      <input type="text" class="form-control" name="palabra" placeholder="Palabra">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                  </form>
                </div>
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bar-chart-o fa-fw"></i> Full Tweets
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div id="tweets">
                              <% datos.forEach(function(dato){ %>
                                <% if(dato.type == 'Text'){ %>
                                  <div class="panel panel-default">
                                    <div class="panel-heading">
                                      <h3 class="panel-title"><%= dato.user %></h3>
                                    </div>
                                    <div class="panel-body">
                                      <p class="lead"><%= dato.message %></p>
                                      <p class="lead"> Entidades:
                                        <% dato.lista.forEach(function(ent){ %>
                                          <%= ent %>,
                                        <% });%>
                                      </p>
                                    </div>
                                  </div>
                                <% } else { %>
                                  <div class="panel panel-default">
                                    <div class="panel-heading">
                                      <h3 class="panel-title"><%= dato.user %></h3>
                                    </div>
                                    <div class="panel-body">
                                      <img src="<%= dato.message%>" class="img-responsive" alt="Responsive image">
                                      <p class="lead"> Etiquetas:
                                        <% dato.lista.forEach(function(ent){ %>
                                          #<%= ent %>
                                        <% });%>
                                      </p>
                                    </div>
                                  </div>
                                <% } %>
                              <% }); %>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-8 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <% include importJs %>
</body>

</html>
